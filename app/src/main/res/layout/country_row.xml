<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/country_name"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/country_id"
        app:layout_constraintEnd_toStartOf="@id/country_iso2"
        android:layout_marginTop="8dp"/>

    <TextView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/country_id"
        android:textAlignment="textEnd"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/country_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/country_name"/>

    <TextView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/country_iso2"
        android:textAlignment="textEnd"
        app:layout_constraintTop_toTopOf="@id/country_name"
        app:layout_constraintStart_toEndOf="@id/country_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>