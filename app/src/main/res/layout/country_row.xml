<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/country_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/country_region_title"
        android:text="@string/country_region"
        app:layout_constraintTop_toBottomOf="@id/country_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/country_region"
        app:layout_constraintTop_toTopOf="@id/country_region_title"
        app:layout_constraintStart_toEndOf="@id/country_region_title"
        app:layout_constraintEnd_toStartOf="@id/country_subregion_title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/country_subregion_title"
        android:text="@string/country_subregion"
        app:layout_constraintTop_toTopOf="@id/country_region_title"
        app:layout_constraintStart_toEndOf="@id/country_region"
        app:layout_constraintEnd_toStartOf="@id/country_subregion"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/country_subregion"
        app:layout_constraintTop_toTopOf="@id/country_region_title"
        app:layout_constraintStart_toEndOf="@id/country_subregion_title"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>